<UserControl x:Class="DiscordRichPresencePlugin.Views.TemplateManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Width="388">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Шаблони Rich Presence" FontWeight="Bold" FontSize="14"/>

        <DataGrid Grid.Row="1" Margin="0,8,0,8" AutoGenerateColumns="False"
                  ItemsSource="{Binding Templates}" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="2*"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="4*"/>
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="4*"/>
                <DataGridCheckBoxColumn Header="Увімкн." Binding="{Binding IsEnabled}" Width="2*"/>
                <DataGridTextColumn Header="Пріор." Binding="{Binding Priority}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Оновити" Margin="0,0,8,0" />
            <Button Content="Експорт…" Margin="0,0,8,0" />
            <Button Content="Імпорт…" />
        </StackPanel>
    </Grid>
</UserControl>
