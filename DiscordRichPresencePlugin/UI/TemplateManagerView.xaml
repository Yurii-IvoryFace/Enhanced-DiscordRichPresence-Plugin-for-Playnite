<UserControl
    x:Class="DiscordRichPresencePlugin.UI.TemplateManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="900"
    UseLayoutRounding="True" SnapsToDevicePixels="True">

    <UserControl.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="Add"            Command="{Binding AddTemplateCommand}"/>
                <Button Content="Duplicate"      Command="{Binding DuplicateTemplateCommand}"/>
                <Button Content="Remove"         Command="{Binding RemoveTemplateCommand}"/>
                <Separator Width="8"/>
                <Button Content="Move up"        Command="{Binding MoveUpCommand}"/>
                <Button Content="Move down"      Command="{Binding MoveDownCommand}"/>
                <Separator Width="8"/>
                <!-- NEW: stubbed generator -->
                <Button Content="Generate Template (beta)" Command="{Binding GenerateTemplateCommand}" ToolTip="Generate a template suggestion (coming soon)"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Import" Command="{Binding ImportCommand}"/>
                <Button Content="Export" Command="{Binding ExportCommand}"/>
                <Button Content="Save All" Command="{Binding SaveCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Left: list & search -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="8,0,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBox Width="220" Margin="0,0,6,0" 
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                 ToolTip="Search templates by name, tags..."/>
                <CheckBox Content="Show only active" IsChecked="{Binding ShowOnlyActive}"/>
            </StackPanel>

            <ListBox Grid.Row="1"
               ItemsSource="{Binding Templates}"
               SelectedItem="{Binding SelectedTemplate}"
               DisplayMemberPath="Name"/>
        </Grid>

        <!-- Right: editor -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Template" Style="{StaticResource SectionHeader}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Name:"/>
                    <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTemplate.Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Description:"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,6,0,0" 
                     Text="{Binding SelectedTemplate.Description, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Priority:"/>
                    <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,6,0,0" Width="70"
                     Text="{Binding SelectedTemplate.Priority, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Details format:"/>
                    <TextBox   Grid.Row="3" Grid.Column="1" Margin="0,6,0,0" AcceptsReturn="True" Height="60"
                     Text="{Binding SelectedTemplate.DetailsFormat, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Placeholders: {game}, {sessionTime}, {totalPlaytime}, {dayOfWeek}, ..."/>

                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="State format:"/>
                    <TextBox   Grid.Row="4" Grid.Column="1" Margin="0,6,0,0" AcceptsReturn="True" Height="60"
                     Text="{Binding SelectedTemplate.StateFormat, UpdateSourceTrigger=PropertyChanged}"/>

                    <CheckBox  Grid.Row="5" Grid.Column="1" Margin="0,6,0,0" 
                     Content="Enabled"
                     IsChecked="{Binding SelectedTemplate.IsEnabled}"/>
                </Grid>

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="Conditions" Style="{StaticResource SectionHeader}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Platforms:"/>
                    <TextBox   Grid.Row="0" Grid.Column="1" 
                     Text="{Binding SelectedTemplate.Conditions.PlatformsCsv, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="CSV: PC, Xbox, PlayStation"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Genres:"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,6,0,0"
                     Text="{Binding SelectedTemplate.Conditions.GenresCsv, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="CSV: Action, RPG, Indie"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Tags:"/>
                    <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,6,0,0"
                     Text="{Binding SelectedTemplate.Conditions.TagsCsv, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Hours (24h):"/>
                    <TextBox   Grid.Row="3" Grid.Column="1" Margin="0,6,0,0"
                     Text="{Binding SelectedTemplate.Conditions.HoursCsv, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="CSV ranges: 0-6,18-23"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0" Text="Days of week:"/>
                    <TextBox   Grid.Row="4" Grid.Column="1" Margin="0,6,0,0"
                     Text="{Binding SelectedTemplate.Conditions.DaysOfWeekCsv, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="CSV: Mon,Tue,Sat"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Grid.ColumnSpan="2" LastChildFill="False" Margin="8">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="#666"
                 Text="Tip: Templates are evaluated from top to bottom by priority and conditions."/>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Save All" Command="{Binding SaveCommand}"/>
                <Button Content="Close" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>