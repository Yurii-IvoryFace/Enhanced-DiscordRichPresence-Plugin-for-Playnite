<UserControl x:Class="DiscordRichPresencePlugin.DiscordRichPresenceSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <StackPanel Margin="20">
        <TextBlock Text="Discord Rich Presence Settings" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <CheckBox Name="CheckEnableRichPresence" 
                  Content="Enable Discord Rich Presence" 
                  IsChecked="{Binding EnableRichPresence}"
                  Margin="0,5"/>

        <CheckBox Name="CheckShowGenre" 
                  Content="Show game genre in status" 
                  IsChecked="{Binding ShowGenre}"
                  Margin="0,5"/>

        <CheckBox Name="CheckShowButtons" 
                  Content="Show interactive buttons (if game has links)" 
                  IsChecked="{Binding ShowButtons}"
                  Margin="0,5"/>

        <CheckBox Name="CheckShowPlaytime" 
                  Content="Show time elapsed" 
                  IsChecked="{Binding ShowPlaytime}"
                  Margin="0,5"/>

        <Separator Margin="0,15"/>

        <TextBlock Text="Custom Status Format:" 
                   Margin="0,10,0,5"/>
        <TextBox Name="TextCustomStatus" 
                 Text="{Binding CustomStatus}" 
                 Margin="0,0,0,5"/>
        <TextBlock Text="Use {game} for game name, {platform} for platform" 
                   FontStyle="Italic" 
                   Foreground="Gray"
                   FontSize="11"/>

        <Separator Margin="0,15"/>

        <TextBlock Text="Game Icon Mappings:" 
                   FontWeight="Bold"
                   Margin="0,10,0,5"/>
        <TextBlock Text="Edit game_mappings.json in the plugin data folder to configure custom game icons." 
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,0,0,10"/>

        <Button Name="ButtonOpenMappingsFolder" 
                Content="Open Mappings Folder" 
                Click="ButtonOpenMappingsFolder_Click"
                Width="150"
                HorizontalAlignment="Left"
                Padding="10,5"/>

        <Separator Margin="0,15"/>

        <TextBlock TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11">
            <Run Text="Note: You need to create a Discord Application and add game assets at"/>
            <Hyperlink NavigateUri="https://discord.com/developers/applications" 
                       RequestNavigate="Hyperlink_RequestNavigate">
                discord.com/developers/applications
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>